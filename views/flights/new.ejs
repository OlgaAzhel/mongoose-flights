<%- include('../partials/header')%>
    <h2>Enter a New Flight</h2>
    <form action="/flights" method="POST">
        <label>Airline:
            <select name="airline">
                <option value="United">United</option>
                <option value="Spirit">Spirit</option>
                <option value="American" selected>American</option>
                <option value="Southwest">Southwest</option>
            </select>
        </label><br>
        <label>Airport:
            <select name="airport">
                <option value="AUS">Austin</option>
                <option value="DFW">Dallas</option>
                <option value="DEN" selected>Denver</option>
                <option value="LAX">LA</option>
                <option value="SAN">SF</option>
            </select>
        </label><br>
        <label>Flight Number:

            <input type="number" name="flightNo">
        </label><br>
        <label>Departs:
            
            <input type="datetime-local" name="departs" value="<%= departsDate %>" >
        </label><br>
        <button type="submit">Add Flight</button>
    </form>


    <%- include('../partials/footer')%>