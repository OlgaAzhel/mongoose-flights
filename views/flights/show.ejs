<%- include('../partials/header') %>

    <table>
        <thead>
            <tr>
                <th>Flight</th>
                <th>Airline</th>
                <th>Departure Airport</th>
                <th>Departure date/time:</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= flight.flightNo %>
                </td>
                <td>
                    <%= flight.airline %>
                </td>
                <td>
                    <%= flight.airport %>
                </td>
                <td>
                    <%= flight.departs %>
                </td>
            </tr>
        </tbody>
    </table>
    <h3>Existing tickets:</h3>
    <table>
        <thead>
            <tr>
                <th>Seat number</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
            <% tickets.forEach((ticket)=> { %>
                <tr>
                    <td>
                        <%= ticket.seat %>
                    </td>
                    <td>
                        <%= ticket.price %>$
                    </td>
                </tr>
                <% }) %>

        </tbody>
    </table>
    <br>
    <h3>Destinations:</h3>
    <form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
        <label>Arrival airport:
            <select name="airport">
                <option value="AUS">Austin</option>
                <option value="DFW">Dallas</option>
                <option value="DEN" selected>Denver</option>
                <option value="LAX">LA</option>
                <option value="SAN">SF</option>
            </select>
        </label><br>
        <label>Arrival date and time:
            <input type="datetime-local" name="arrival">
        </label><br>
        <button type="submit">Add Destination</button><br>
    </form>
    <% if (flight.destinations.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Destination airport</th>
                    <th>Arrival date and time</th>
                </tr>
            </thead>
            <tbody>
                <% flight.destinations.forEach(function(d) { %>
                    <tr>
                        <td>
                            <%= d.airport %>
                        </td>
                        <td>
                            <%= d.arrival %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <h5>No arrivals added</h5>
            <% } %>
                <h3>Tickets:</h3>
                <form action="/flights/<%= flight._id%>/tickets" method="POST">
                    <label>Seat number:
                        <input name="seat" required pattern="[A-F][1-9]\d?">
                    </label>
                    <label>Price:
                        <input name="price" type="number">
                    </label>
                    <button type="submit">Add ticket</button>
                </form>
                <%- include('../partials/footer') %>